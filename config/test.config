params {
	input               			= "$projectDir/../data/run_SAPHIR_5104/V14/SUP/ont_pl_all_cluster"
	output             	 			= "haplotyping_test_SAPHIR_use_variant_calling_pos"
	bam_pattern 					= "masked_consensus.bam"
	cluster_stats_pattern 			= "split_cluster_stats.tsv"
	min_reads_per_cluster 			= 6
	max_reads_per_cluster 			= 1000
	max_edit_distance				= 2
	use_variant_calling_positions 	= true
	variant_calling_positions 		= "data/run_SAPHIR_5104/V14/SUP/variant_calling_pos/all_positions.tsv"
	ranges_to_exclude   			= "2472,2506"
	min_qscore          			= 60
    variant_cutoff      			= 0.0085
    hardmask            			= false
	output_format       			= "fastq"
}

// NEXTFLOW REPORTING
if(params.output != null){
	dag {
		enabled = true
		file = "${params.output}/nextflow_stats/dag.mmd"
		overwrite = true
	}
	report {
		enabled = true
		file = "${params.output}/nextflow_stats/report.html"
		overwrite = true
	}
	timeline {
		enabled = true
		file = "${params.output}/nextflow_stats/timeline.html"
		overwrite = true
	}
	trace {
		enabled = true
		file = "${params.output}/nextflow_stats/trace.txt"
		overwrite = true
	}
}